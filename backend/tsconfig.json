{
  "compilerOptions": {
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "rootDir": "../",
    "outDir": "./dist",
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  },
  "include": ["backend/**/*", "shared/**/*", "index.ts"]
}
